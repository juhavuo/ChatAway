<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatbackground"
    tools:context="fi.juhavuometropolia.chatclient.InstructionsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#ff8ea8e3"
        android:text="@string/instructionsstring"
        android:id="@+id/instructionsbar"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/instructionsbar"
        android:id="@+id/instructionstv"
        android:inputType="none"/>

</RelativeLayout>
